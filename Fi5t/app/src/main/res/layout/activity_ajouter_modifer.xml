<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.he.arc.p1.g5.fi5t.AjouterModifer"
    android:background="@drawable/font">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom: "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prénom: "
        android:layout_marginTop="10dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pseudo: "
        android:layout_marginTop="10dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mot de passe: "
        android:layout_marginTop="10dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rôle: "
        android:layout_marginTop="10dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtNom"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:maxLength="20"
        android:textColor="#ff7a7a7a" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtPrenom"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:maxLength="20"
        android:textColor="#ff7a7a7a" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtPseudo"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:maxLength="20"
        android:textColor="#ff7a7a7a" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtMDP"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignEnd="@+id/edtPseudo"
        android:maxLength="20"
        android:textColor="#ff7a7a7a" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtRole"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:maxLength="20"
        android:textColor="#ff7a7a7a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="OK"
        android:id="@+id/bOK"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button"
        android:textColor="#ff7a7a7a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/btnAjouter"
        android:background="@drawable/button"
        android:textColor="#ff7a7a7a"
        android:layout_below="@+id/bOK"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bOK" />
</RelativeLayout>
