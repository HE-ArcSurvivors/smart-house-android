<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.he.arc.p1.g5.fi5t.MonProfil"
    android:background="@drawable/font"
    android:id="@+id/relativeLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom: "
        android:id="@+id/lgtLabelNom1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hughuenin"
        android:id="@+id/lgtNom"
        android:textColor="#ffe8e9e7"
        android:textSize="22dp"
        android:layout_toEndOf="@+id/lgtLabelNom1"
        android:layout_above="@+id/lgtLabel2"
        android:layout_alignParentEnd="true"
        android:maxLength="40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prénom: "
        android:id="@+id/lgtLabel2"
        android:layout_marginTop="12dp"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_below="@+id/lgtLabelNom1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jacqueline"
        android:id="@+id/lgtPrenom"
        android:textColor="#ffe8e9e7"
        android:textSize="22dp"
        android:layout_toEndOf="@+id/lgtLabel2"
        android:layout_alignTop="@+id/lgtLabel2"
        android:layout_alignParentEnd="true"
        android:maxLength="40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID: "
        android:layout_marginTop="12dp"
        android:id="@+id/lgtlabel3"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_below="@+id/lgtLabel2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Maman"
        android:id="@+id/lgtID"
        android:textColor="#ffe8e9e7"
        android:textSize="22dp"
        android:layout_toEndOf="@+id/lgtlabel3"
        android:layout_alignTop="@+id/lgtlabel3"
        android:layout_alignParentEnd="true"
        android:maxLength="40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rôle:  "
        android:layout_marginTop="12dp"
        android:id="@+id/lgtLabel4"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_below="@+id/lgtlabel3"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Administrateur"
        android:id="@+id/lgtRole"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_toEndOf="@+id/lgtLabel4"
        android:layout_alignTop="@+id/lgtLabel4"
        android:layout_alignParentEnd="true"
        android:maxLength="40" />

</RelativeLayout>
