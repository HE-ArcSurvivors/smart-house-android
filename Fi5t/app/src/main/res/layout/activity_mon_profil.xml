<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.he.arc.p1.g5.fi5t.MonProfil"
    android:background="@drawable/font"
    android:id="@+id/relativeLayout">

    <LinearLayout android:focusable="true"
        android:focusableInTouchMode="true" android:layout_width="0px"
        android:layout_height="0px" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom: "
        android:id="@+id/lgtLabelNom1"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_above="@+id/tvPrenom"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom Inconnu"
        android:id="@+id/tvNom"
        android:textColor="#ffe8e9e7"
        android:textSize="22dp"
        android:layout_toEndOf="@+id/lgtlabel3"
        android:maxLength="40"
        android:layout_above="@+id/tvPrenom"
        android:layout_alignParentEnd="true"
        android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prénom: "
        android:id="@+id/lgtLabel2"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_toStartOf="@+id/tvNom"
        android:layout_above="@+id/tvUsername"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prénom Inconnu"
        android:id="@+id/tvPrenom"
        android:textColor="#ffe8e9e7"
        android:textSize="22dp"
        android:layout_toEndOf="@+id/lgtLabel2"
        android:maxLength="40"
        android:layout_above="@+id/tvUsername"
        android:layout_alignParentEnd="true"
        android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pseudo: "
        android:id="@+id/lgtlabel3"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_above="@+id/tvRole"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pseudo Inconnu"
        android:id="@+id/tvUsername"
        android:textColor="#ffe8e9e7"
        android:textSize="22dp"
        android:layout_toEndOf="@+id/lgtLabel2"
        android:maxLength="40"
        android:layout_above="@+id/tvRole"
        android:layout_alignParentEnd="true"
        android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rôle:  "
        android:id="@+id/lgtLabel4"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:singleLine="false"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rôle Inconnu"
        android:id="@+id/tvRole"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_toEndOf="@+id/lgtLabel2"
        android:maxLength="40"
        android:singleLine="true"
        android:layout_alignBottom="@+id/lgtLabel4"
        android:layout_alignEnd="@+id/tvUsername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmer Modifications"
        android:id="@+id/bConfirm"
        style="@style/AppTheme"
        android:textColor="#ffffffff"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:onClick="save"/>


</RelativeLayout>
