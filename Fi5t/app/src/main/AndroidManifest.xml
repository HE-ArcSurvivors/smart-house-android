<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.he.arc.p1.g5.fi5t" >

    <application
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/logo_fist"
        android:label="@string/app_name" >
        <activity
            android:name=".Connection"
            android:theme="@style/Connection" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Users"
            android:label="@string/title_activity_users"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Parametre"
            android:label="@string/title_activity_parametre"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".POSTIT"
            android:label="@string/title_activity_postit" >
            <meta-data
                android:name="andoid.app.default_searchable"
                android:value=".POSTIT" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="andoid.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Materiel"
            android:label="@string/title_activity_materiel"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".MonProfil"
            android:label="@string/title_activity_mon_profil"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".BlueTests"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_blue_tests"
            android:theme="@style/BluetoothTheme"
            android:uiOptions="none" >
        </activity>
        <activity
            android:name=".BlueDeviceList"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".BluePreferences" />
    </application>

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk android:minSdkVersion="7" />

</manifest>
